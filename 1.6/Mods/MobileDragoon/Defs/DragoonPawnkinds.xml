<Defs>
  <PawnKindDef ParentName="GuardBase" Name="BS_Viper_Dragoon" Abstract="True">
    <label>false dragoon</label>
    <combatPower>250</combatPower>
    <aiAvoidCover>true</aiAvoidCover>
    <isFighter>true</isFighter>
    <allowRoyalRoomRequirements>false</allowRoyalRoomRequirements>
    <canStrip>false</canStrip>
    <gearHealthRange>0.8~2</gearHealthRange>
    <apparelTags>
      <li>IndustrialMilitaryBasic</li>
      <li>BeltDefensePop</li>
    </apparelTags>
    <apparelMoney>5000~10000</apparelMoney>
    <weaponMoney>5000~10000</weaponMoney>
    <apparelAllowHeadgearChance>0.75</apparelAllowHeadgearChance>
    <techHediffsChance>0.1</techHediffsChance>
    <techHediffsMoney>1000~8000</techHediffsMoney>
    <techHediffsTags>
      <li>ImplantEmpireCommon</li>
      <li>ImplantEmpireRoyal</li>
    </techHediffsTags>
    <initialWillRange>2~5</initialWillRange>
    <initialResistanceRange>15~24</initialResistanceRange>
    <xenotypeSet Inherit="False">
      <xenotypeChances>
        <LoS_Lamia>0.60</LoS_Lamia>
        <Hussar MayRequire="Ludeon.RimWorld.Biotech">0.25</Hussar>
        <VRE_Lowmate MayRequire="vanillaracesexpanded.highmate">0.20</VRE_Lowmate>
      </xenotypeChances>
    </xenotypeSet>
    <apparelColor>0.35,0.15,0.35</apparelColor>
    <biocodeWeaponChance>0.75</biocodeWeaponChance>
    <modExtensions>
      <li Class="WalkerGear.ModExtForceApparelGen">
        <StructurePointRange>0.85~1.25</StructurePointRange>
        <apparels>
          <li>DMS_Apparel_PV8_Core</li>
          <li>DMS_Apparel_PV8_Helmet</li>
          <li>DMS_Apparel_InfraredSensor</li>
          <li>DMS_Apparel_PackFrame</li>
        </apparels>
        <chanceApparels>
          <li>
            <chance>0.25</chance>
            <apparel>DMS_Apparel_SmokeLauncher</apparel>
          </li>
          <li>
            <chance>0.45</chance>
            <apparel>DMS_Apparel_PulseShield</apparel>
          </li>
          <li>
            <chance>0.05</chance>
            <apparel>DMS_Apparel_FA47_Helmet</apparel>
          </li>
        </chanceApparels>
        <colorGenerator Class="ColorGenerator_Options">
          <options>
            <li>
              <only>(0.34,0.16,0.34)</only>
            </li>
          </options>
        </colorGenerator>
      </li>
      <li Class="WalkerGear.ModExtension_NoIdeoApparel"/>
    </modExtensions>
  </PawnKindDef>

  <PawnKindDef ParentName="BS_Viper_Dragoon">
    <defName>BS_Viper_MeleeDragoon</defName>
    <weaponTags Inherit="False">
      <li>Dragoon_Melee</li>
    </weaponTags>
  </PawnKindDef>

  <PawnKindDef ParentName="BS_Viper_Dragoon">
    <defName>BS_Viper_RangedDragoon</defName>
    <weaponTags Inherit="False">
      <li>GunHeavy</li>
      <li>Minigun</li>
      <li>DMS_MechWeaponHeavy</li>
      <li>DMS_DragoonGun</li>
      <li>Gun_Recoilless</li>
    </weaponTags>
  </PawnKindDef>
</Defs>