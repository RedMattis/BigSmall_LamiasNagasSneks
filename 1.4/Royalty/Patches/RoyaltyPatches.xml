          </options>
        </li>

        <li>
          <!-- Bugz fights -->
          <kindDef>Combat</kindDef>
          <commonality>30</commonality>
          <options>
            <LoS_Viper_Elite>5</LoS_Viper_Elite>
            <LoS_Viper_Assassin>5</LoS_Viper_Assassin>
